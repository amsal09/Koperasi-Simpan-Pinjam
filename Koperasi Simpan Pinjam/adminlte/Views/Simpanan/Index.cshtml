
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Simpanan
            <small>Koperasi Simpan Pinjam</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Data Master</a></li>
            <li class="active">Simpanan</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <i class="fa fa-google-wallet bg-maroon"></i><h3 class="box-title">Simpanan</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Kode Simpanan</th>
                                    <th>Jenis Simpanan</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Rows.Count == 0)
                                {
                                    <tr>
                                        <td>#</td>
                                        <td>#</td>
                                        <td>#</td>
                                    </tr>
                                }
                                else
                                {
                                    for (int i = 0; i < Model.Rows.Count; i++)
                                    {
                                        using (Html.BeginForm("Delete", "RepFilters", new { @id = Model.Rows[i][0] }))
                                        {
                                            var myModal = "myModal" + Model.Rows[i][0];
                                            <tr>
                                                <td>@Model.Rows[i][0]</td>
                                                <td>@Model.Rows[i][1]</td>
                                                <td>
                                                    <a href="@Url.Action("Edit", "Simpanan", new { @id = Model.Rows[i][0] })" class="btn btn-app btn-xs bg-blue"><i class="fa fa-edit"></i>Ubah</a>
                                                    <a href="" class="btn btn-app btn-xs bg-red" data-toggle="modal" data-target="#@myModal" data-whatever="@Model.Rows[i][0]"><i class="fa fa-trash"></i>Hapus</a>

                                                    <div class="modal fade" id="@myModal">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                    <h4 class="modal-title">Alert Modal</h4>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Apakah anda yakin untuk menghapus data @Model.Rows[i][0]?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Tidak</button>
                                                                    <a href="@Url.Action("Delete", "Simpanan", new { @id = Model.Rows[i][0] })" class="btn btn-primary">Ya</a>
                                                                </div>
                                                            </div>
                                                            <!-- /.modal-content -->
                                                        </div>
                                                        <!-- /.modal-dialog -->
                                                    </div>
                                                    <!-- /.modal -->
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                        <a href="@Url.Action("Create", "Simpanan")" class="btn btn-success">Tambah Data</a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script type="text/javascript">
  $(document).ready(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
    </script>

}






