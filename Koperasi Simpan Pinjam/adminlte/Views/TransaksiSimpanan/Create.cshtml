@model adminlte.Models.TransaksiSimpananModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Form Tambah Transaksi Simpanan
            <small>Koperasi</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Simpan</a></li>
            <li class="active">Form Transaksi Simpanan</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- SELECT2 EXAMPLE -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Tambah Data</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Nama Anggota</label>
                                @Html.DropDownListFor(model => model.no_ang, ViewBag.anggotaList2 as SelectList, "--Pilih Anggota--", new {htmlAttributes = new { @class = "form-control" }})
                                @Html.ValidationMessageFor(model => model.no_ang, "", new { @class = "text-danger" })
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Tanggal Simpanan</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.tglsimpan, new { htmlAttributes = new { @class = "form-control pull-right", @id = "datepicker", @type= "text" } })
                                    @Html.ValidationMessageFor(model => model.tglsimpan, "", new { @class = "text-danger" })
                                </div>
                             </div>
                            <!-- /.form-group -->

                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Jenis Simpanan</label>
                                @Html.DropDownListFor(model => model.jenis, ViewBag.simpananList as SelectList, "--Jenis Simpanan--", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.jenis, "", new { @class = "text-danger" })
                            </div>
                            <!-- /.form-group -->
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Saldo</label>
                                @Html.EditorFor(model => model.saldo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.saldo, "", new { @class = "text-danger" })
                            </div>

                            <!-- /.form-group -->

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Tambah" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->

            </div>
        <!-- /.box -->
        }
    </section>

</div>

@section Scripts
{
        <script type="text/javascript">
            $(document).ready(function () {
                //Date picker
                $('#datepicker').datepicker({
                    autoclose: true
                })
            })

        </script>
    }
